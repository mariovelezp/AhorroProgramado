
@{
    ViewBag.Title = "SaveImagen";
}

<main>
    <div class="container">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="heading1">Imagen</h1>
                <p class="subheading">Mantenimiento de imagen de segmentos</p>
                <h5 class="card-title">@ViewBag.iMensajeOk</h5>
                <h5 class="card-title"><a href="~/Private/ImgPrincipal">Volver a Consulta de Imagenes.</a></h5>
            </div>

        </div>



        @using (Html.BeginForm("SaveImagen", "Private", FormMethod.Post, new { @class = "p-3 py-md-4 px-md-5", id = "formAddPicture",  enctype = "multipart/form-data" }))
        {
            <div>
                <div class="row justify-content-center">
                    <div class="col-sm-10 col-md-8 col-lg-6 mb-4 px-sm-3 px-4">
                        <div class="card shadow-sm">
                            <div class="p-3 py-md-4 px-md-5">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="form-group">
                                            <label for="IdSegmento">Código Imagen</label>
                                            <input class="form-control" type="text" id="Codimagen" name="Codimagen" value="@ViewBag.Codimagen" readonly="readonly" />

                                            <label for="nombre">Imagen</label>
                                            <input type="file" name="fileimagen" id="fileimagen" class="form-control" required />

                                            <label for="descripcion">Emoji</label>
                                            <input type="file" name="fileemoji" id="fileemoji" class="form-control" required />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-sm-6 col-lg-4 mt-0 mt-md-3 mt-lg-4 px-sm-3 px-4">
                        <input type="submit" class="btn btn-primary d-block col-lg-12" value="Grabar" onsubmit="CamposBlancoImg();" />
                    </div>
                </div>
            </div>
        }
    </div>
</main>
